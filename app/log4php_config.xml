<configuration xmlns="http://logging.apache.org/log4php/">

<appender name="myFileAppender" class="LoggerAppenderFile">
<layout class="LoggerLayoutPattern">
<param name="conversionPattern" value="%date{Y-m-d H:i:s.u}[%logger]: %message %l%n" />
</layout>
<param name="file" value="/home/app/wraith/logs/app/app.log" />
</appender>

<root>
<level value="DEBUG" />
<appender_ref ref="myFileAppender" />
</root>
</configuration>
